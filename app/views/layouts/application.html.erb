                                  <li class="nav-list-item">
                                    <%= link_to "新規登録", new_customer_registration_path, class: 'green-text' %>
                                  </li>
                              </div>
                            </div>
                          </ul>
                        <% end %>
                      <% end %>
                    </nav>
                  <div class="style"></div>
                </header>
