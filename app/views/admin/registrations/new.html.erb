
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render "admin/shared/error_messages", resource: resource %>
        <%= form_with model: @admin, url: admin_registration_path do |f| %>

          <h2><i class="fa-solid fa-pen-nib"></i>管理者新規登録</h2>
          <div class="field">
            <i class="fa-solid fa-leaf"></i><%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <i class="fa-solid fa-leaf"></i><%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <i class="fa-solid fa-leaf"></i><%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "登録", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "admin/shared/links" %>

            </div>
          </div>
        </div>
