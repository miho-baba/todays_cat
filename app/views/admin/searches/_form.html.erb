<div style="color: white">
  <h4>特定の会員を探す<i class="fa-solid fa-magnifying-glass"></i></h4>
</div>

  <% if admin_signed_in? %>
    <%= form_with url: admin_search_path, method: :get, local: true do |f| %>
      <%= f.text_field :content %>
      <%= f.select :model, options_for_select({"会員名or会員ID" => "customer"}) %>
      <%= f.select :method, options_for_select({"完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial"}) %>
      <%= f.submit "検索する", class: "btn btn-info" %>
    <% end %>
  <% end %>