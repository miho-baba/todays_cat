
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>今日猫会員登録一覧<i class="fa-solid fa-users"></i></h1>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row-my-3">
      <div class="col-m-4">

    <table class= "table table-hover table-inverse mx-auto my-3">
        <thead>
          <tr class="p-3 mb-2 bg-success text-white">
            <th><i class="fa-solid fa-circle-xmark"></i>今日猫会員ID</th>
            <th><i class="fa-solid fa-circle-xmark"></i>氏名</th>
            <th><i class="fa-solid fa-circle-xmark"></i>メールアドレス</th>
            <th><i class="fa-solid fa-circle-xmark"></i>ご利用状況</th>
          </tr>
            <% @customers.each do |customer| %>
              <tr>

                <td><%= customer.id %></td>

                <td>
                  <%= link_to admin_customer_path(customer.id), class:"text-dark border-bottom border-dark" do %>
                    <%= customer.last_name %><%= customer.first_name %>
                  <% end %>
                </td>

                <td><%= customer.email %></td>

                <td>
                  <% if customer.is_deleted %>
                    <p>無効</p>
                  <% else %>
                    <p>有効</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </thead>
        </table>

      <div class="col-lg-5 mx-auto" style="width: 200px;">
        <%= paginate @customers %>
      </div>

      </div>
    </div>
  </div>
