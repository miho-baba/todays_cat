<h1>今日猫ユーザー一覧</h1>

<div class="container">
  <div class="row-my-3">
    <div class="col-m-4">
   <h4>会員一覧</h4>
   </div>

  <table class= "table table-hover table-inverse mx-auto my-3">
      <thead>
          <tr class="p-3 mb-2 bg-info text-white">
              <th>今日猫会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ご利用状況</th>
          </tr>
          <% @customers.each do |customer| %>
              <tr>
                  <td><%= customer.id %></td>
                  <td>
                      <%= link_to admin_customer_path(customer.id), class:"text-dark border-bottom border-dark" do %>
                          <%= customer.last_name %><%= customer.first_name %>
                      <% end %>
                  </td>
                  <td><%= customer.email %></td>
                  <td>
                      <%= customer.is_deleted %>
                      <% if customer.is_deleted %>
                          <p>無効</p>
                      <% else %>
                          <p>有効</p>
                      <% end %>
                  </td>
              </tr>
          <% end %>
      </thead>
  </table>

  <div class="col-lg-5 mx-auto" style="width: 200px;">
  <%= paginate @customers %></div>
     </div>
     </div>
