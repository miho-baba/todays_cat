<% if controller_name != 'sessions' %>
  <h4>※会員登録済みの方</h4>
    <%= link_to "こちら", new_session_path(resource_name), class: "ml-3 btn btn-outline-success" %>からログインを行って下さい<br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <h4>※初めての方</h4>
    <%= link_to "こちら", new_registration_path(resource_name), class: "ml-3 btn btn-outline-success" %>から会員登録を行って下さい<br />
<% end %>