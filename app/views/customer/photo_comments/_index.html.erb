<table>
  <tbody>
    <% photo.photo_comments.each do |photo_comment| %>
      <tr>
        <td>
          <%= link_to customer_customer_path(photo_comment.customer) do %>
            <%= image_tag photo_comment.customer.get_profile_image(50,50) %><br>
            <%= "#{photo_comment.customer.last_name}#{photo_comment.customer.first_name}様" %>
            <%= photo_comment.updated_at.strftime("%Y/%m/%d %H:%M:%S") %>
          <% end %>
        </td>

        <td>
          <%= photo_comment.comment %>
        </td>

        <td>
          <% if photo_comment.customer == current_customer %>
            <%= link_to "削除する", customer_photo_photo_comment_path(photo, photo_comment), method: :delete, class: "btn btn-sm btn-danger float-end", remote: true %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

