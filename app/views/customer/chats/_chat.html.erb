<% if chat.image.attached? %>
  <%= image_tag chat.image, size: '350x350' %>
<% end %>
  <div class="right-container d-flex justify-content-end">
    <p id="chat_<%= chat.id %>" style="background-color: rgba(0, 185, 0, 0.6); padding: 5px; border-radius: 10px; "><%= chat.message %></p>
    <%= button_to "削除", customer_chat_path(chat), method: :delete, data: { remote: true }, class: "btn btn-danger btn-sm ml-2", id: "delete_chat_#{chat.id}" %>
    <%= chat.created_at.localtime.strftime("%Y/%m/%d %H:%M:%S") %>
  </div>
