
<% if current_customer != customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー外す", customer_customer_relationships_path(customer.id), method: :delete, class: ("btn btn-secondary btn-block") %>
  <% else %>
    <%= link_to "フォローする", customer_customer_relationships_path(customer.id), method: :post, class: ("btn btn-primary btn-block") %>
  <% end %>
<% end %>