<1>今日猫会員一覧</1>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>今日猫会員名</th>
      <th>紹介文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to(customer_customer_path(customer.id)) do %>
            写真:<%= image_tag customer.get_profile_image(100,100) %>
            <% end %>
          <td><%= customer.last_name %>様</td>
          <td><%= link_to customer.introduction ,customer_customer_path(customer.id), class: "customer_#{customer.id}" %></td>
          </td>
        </tr>
        <% end %>
    </tbody>
</table>