<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
<h2><i class="fa-solid fa-paw"></i>プロフィール<i class="fa-solid fa-paw"></i></h2>
  <table class='table'>

    <tr>
      <th>
      <i class="fa-solid fa-feather"></i>プロフィール画像
        <%= image_tag @customer.get_profile_image(100,100) %>
      </th>
    </tr>

    <tr>
  	  <th>
  	    <i class="fa-solid fa-feather"></i>名前(姓)
  	      <%= @customer.last_name %>
  	 </th>
    </tr>

    <tr>
  	  <th>
  	    <i class="fa-solid fa-feather"></i>名前(名)
  	      <%= @customer.first_name %>
  	  </th>
    </tr>

    <tr>
  	  <th><i class="fa-solid fa-feather"></i>紹介文
  	    <%= @customer.introduction %>
  	  </th>
    </tr>

    <tr>
  	  <th><i class="fa-solid fa-feather"></i>フォロー
        <%= link_to customer_customer_followings_path(@customer), class: "btn btn-outline-primary btn-block" do %>
          <%= @customer.followings.count %>人
        <% end %>
      </th>
    </tr>

    <tr>
  	  <th>
  	    <i class="fa-solid fa-feather"></i>フォロワー
          <%= link_to customer_customer_followers_path(@customer), class: "btn btn-outline-success btn-block" do %>
            <%= @customer.followers.count %>人
          <% end %>
      </th>
    </tr>

    </tr>
  </table>

  <div class='row'>
      <% if current_customer != @customer %>
        <td><%= render "relationships/btn", customer: customer, options: { class: ""} %></td>
      <% else %>
        <%= link_to edit_customer_customer_path(@customer), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-gear"></i>
      <% end %>
    <% end %>
  </div>


  <%= form_with model: @photo, url: customer_photos_path do |f| %>
<h2 class="mt-3"><i class="fa-solid fa-paw"></i>投稿フォーム<i class="fa-solid fa-paw"></i></h2>

    <div class="form-group">
      <label for="title"><i class="fa-solid fa-star-of-david"></i>タイトル</label>
      <%= f.text_field :title, class:'form-control photo_title' %>
    </div>

    <div class="form-group">
      <label for="image"><i class="fa-solid fa-star-of-david"></i>写真</label>
      <%= f.file_field :image, class:'form-control- photo_image' %>
    </div>

    <div class="form-group">
      <label for="cat_color"><i class="fa-solid fa-star-of-david"></i>猫ちゃんの特徴（毛の色）</label>
      <%= f.text_field :cat_color, class:'form-control photo_cat_color' %>
    </div>

    <div class="form-group">
      <label for="photo_introduction"><i class="fa-solid fa-star-of-david"></i>写真の説明文</label>
      <%= f.text_area :photo_introduction, class:'form-control photo_introduction' %>
    </div>

    <div class="form-group">
      <%= f.submit :'投稿する', class:'btn btn-danger' %>
    </div>
<% end %>
</div>

<div class='col-md-8 offset-md-1'>
  <h2><i class="fa-solid fa-paw"></i><%= @customer.last_name%>様の投稿履歴一覧<i class="fa-solid fa-paw"></i></h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>投稿写真</th>
      <th>投稿日時</th>
      <th>お気に入り数</th>
      <th>コメント数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td>
          <%= link_to customer_photo_path(photo) do %>
            <% if photo.image.attached? %>
              <%= image_tag photo.image, size: '100x100' %>
            <% end %>
          <% end %>
        </td>
        <td><%= photo.updated_at %></td>
        <td><%= render "favorites/btn", photo: photo, index: true %></td>
        <td>コメント数<%= photo.photo_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <div class="col-lg-5 mx-auto" style="width: 200px;">
      <%= paginate @photos %>
    </div>

       </div>
    </div>
  </div>
