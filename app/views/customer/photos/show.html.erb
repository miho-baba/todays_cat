<h1>猫ちゃん写真詳細</h1>

  <table class="table table-hover table-inverse">
    <tbody>
      <tr>
      <td>
        <% if @photo.image.attached? %>
        <%= image_tag @photo.image, :size =>'600x500' %>
        <% end %>
        <br>
        投稿者：<%= @photo.customer.last_name %>様
      </td>

      <td>投稿時間<br><%= @photo.updated_at %></td>

      <td>
        タイトル<br><%= @photo.title %>
      </td>

      <td>
        猫の毛色<br><%= @photo.cat_color %>
      </td>

      <td>
        ~説明文~<br><%= @photo.photo_introduction %>
      </td>

        <% if @photo.customer == current_customer %>
      <tr>
        <td>
          <%= link_to '編集する', edit_customer_photo_path(@photo), class: "btn btn-sm btn-success edit" %>
        </td>
      </tr>
        <% end %>
        <% if @photo.customer == current_customer %>
      <tr>
        <td>
          <%= link_to '削除する', customer_photo_path(@photo.id), method: :delete, class: 'btn btn-sm btn-danger destroy'%>
        </td>
      <tr>
        <% end %>
      </tr>
    </tbody>
  </table>