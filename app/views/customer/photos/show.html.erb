<1>猫写真詳細ページ</1>

  <table class="table table-hover table-inverse">
    <tbody>
      <tr>
      <td>
        <% if @photo.image.attached? %>
        <%= image_tag @photo.image %>
        <% end %>
        <br>
        <%= @photo.customer.last_name %>様
      </td>

      <td>投稿時間<%= @photo.updated_at %></td>

      <td>
        タイトル<%= @photo.title %>
      </td>

      <td>
        猫の毛色<%= @photo.cat_color %>
      </td>

      <td>
        写真の説明文<%= @photo.photo_introduction %>
      </td>

        <% if @photo.customer == current_customer %>
      <td><%= link_to '編集する', edit_customer_photo_path(@photo), class: "btn btn-sm btn-success edit" %></td>
        <% end %>
        <% if @photo.customer == current_customer %>
      <td><%= link_to '削除する', customer_photo_path(@photo.id), method: :delete, class: 'btn btn-sm btn-danger destroy'%></td>
        <% end %>
      </tr>
    </tbody>
  </table>