<h2><i class="fa-solid fa-paw"></i>ログインフォーム<i class="fa-solid fa-paw"></i></h2>

<%= form_with model: @customer, url: customer_session_path do |f| %>
  <div class="field">
    <i class="fa-solid fa-key"></i><%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <i class="fa-solid fa-key"></i><%= f.label :"パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :自動登録する %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-danger" %>
  </div>
<% end %>

<%= render "customer/shared/links" %>
