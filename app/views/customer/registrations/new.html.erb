<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render "customer/shared/error_messages", resource: @customer %>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <h2><i class="fa-solid fa-star"></i>ユーザー登録フォーム<i class="fa-solid fa-star"></i></h2>

          <div class="field">
            <i class="fa-solid fa-paw"></i><%= f.label "名前(姓)" %></br>
            <%= f.text_field :last_name %>
          </div>

          <div class="field">
            <i class="fa-solid fa-paw"></i><%= f.label "名前(名)" %></br>
            <%= f.text_field :first_name %>
          </div>

         <div class="field">
            <i class="fa-solid fa-paw"></i><%= f.label "フリガナ(セイ)" %></br>
            <%= f.text_field :last_name_kana %>
          </div>

          <div class="field">
            <i class="fa-solid fa-paw"></i><%= f.label "フリガナ(メイ)" %></br>
            <%= f.text_field :first_name_kana %>
          </div>

          <div class="field">
            <i class="fa-solid fa-paw"></i><%= f.label :"メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
            <i class="fa-solid fa-paw"></i><%= f.label :"電話番号(ハイフンなし)" %></br>
            <%= f.text_field :phone_number %>
          </div>

          <div class="field">
            <i class="fa-solid fa-paw"></i><%= f.label :"パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <i class="fa-solid fa-paw"></i><%= f.label :"パスワード確認用" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "登録", class: "btn btn-danger" %>
          </div>
      <% end %>
    <%= render "customer/shared/links" %>
    </div>
  </div>
</div>



